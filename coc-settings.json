{
  "typescript.showUnused": false,
  "diagnostic.displayByAle": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "ccls": {
    "command": "ccls",
    "filetypes": [
      "c",
      "cpp",
      "cuda",
      "objc",
      "objcpp"
    ],
    "rootPatterns": [
      ".ccls-root",
      "compile_commands.json"
    ],
    "initializationOptions": {
      "cache": {
        "directory": ".ccls-cache"
      }
    }
  },
  "snippets.ultisnips.pythonPrompt": false
}
