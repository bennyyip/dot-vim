snippet	link
	[`substitute(system('getTitle '''.@*.''''),'^\_s*\|\_s*$','','g')`](`@*`)${1}
snippet ce
	style="text-align: center;"
snippet upimg
        <p style="text-align: center;"><a href="`@*`"><img src="`@*`!thumb" alt="${1}"/></a></p>

snippet post
	extends: post.liquid

	title:   ${1}
	date:    `strftime('%d %b %Y %H:%M:%S %z')`
	route:   ${2}
	---

	${3}

